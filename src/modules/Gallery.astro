---
import Picsum from '@/components/Picsum.astro';
import Placeholder from '@/components/Placeholder.astro';
---

<section class="m-gallery">
    {
        Array.from({ length: 10 }, () => (
            <Picsum server:defer>
                <Placeholder slot="fallback" />
            </Picsum>
        ))
    }
</section>

<style lang="scss">
    .m-gallery {
        display: flex;
        flex-wrap: wrap;
        gap: var(--f6);
        justify-content: center;
    }
</style>
