<div aria-label="toggle navbar" class="c-hamburger">
    <span></span>
    <span></span>
    <span></span>
</div>

<style lang="scss">
    div {
        cursor: pointer;
        display: none;
        opacity: 0.8;
        width: fit-content;

        &:hover {
            opacity: 1;
        }
    }

    span {
        background: var(--c3);
        display: block;
        height: var(--f9);
        margin: var(--f9);
        width: var(--f5);
    }

    @media screen and (max-width: 768px) {
        div {
            display: block;
        }
    }
</style>

<script>
    document.querySelector('.c-hamburger')?.addEventListener('click', () => {
        for (const e of document.querySelectorAll('nav div a')) {
            e.classList.toggle('open');
        }
    });
</script>
