---
import Main from '@/layouts/Main.astro';

export const prerender = true;

export function getStaticPaths() {
    const posts = Object.values(import.meta.glob('./post/*.md', { eager: true }));
    const tags = [...new Set(posts.map((e: any) => e.frontmatter.categories).flat())];
    posts.sort((a: any, b: any) => a.frontmatter.pubDate.localeCompare(b.frontmatter.pubDate));

    return tags.map(e => ({
        params: { tag: e },
        props: { posts: posts.filter((f: any) => f.frontmatter.categories.includes(e)) },
    }));
}

const [{ tag }, { posts }] = [Astro.params, Astro.props];
---

<Main description={`Posts tagged with "${tag}".`} title={`${tag} | Blog`}>
    <main>
        <section>
            <h4>{tag.toUpperCase()}</h4>

            {
                posts.map((e: any) => (
                    <a href={e.url}>
                        {e.frontmatter.title} [{e.frontmatter.author}]
                    </a>
                ))
            }
        </section>
    </main>
</Main>

<style lang="scss">
    @use '@/styles/_root' as *;

    @include section-blog;
</style>
